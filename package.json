{
  "name": "dolphin-admin-core",
  "description": "Universe core utils and plugins for Dolphin Admin.",
  "author": "Bruce Song <recall4056@gmail.com> (https://github.com/recallwei/)",
  "scripts": {
    "dev": "pnpm -r --parallel --filter=\"./packages/*\" --filter=\"./plugins/*\" dev",
    "build": "pnpm -r --filter=\"./packages/*\" --filter=\"./plugins/*\" build",
    "playground:dev": "pnpm --filter=playground dev",
    "release:generate": "pnpm changeset",
    "release:version": "pnpm changeset version",
    "release:publish": "pnpm changeset publish",
    "cspell:check": "cspell \"**\"",
    "prettier:check": "prettier --check --ignore-unknown .",
    "prettier:fix": "prettier --write --ignore-unknown .",
    "cz": "git-cz",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "commitizen": "^4.3.0",
    "cspell": "^7.3.7",
    "cz-git": "^1.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "private": true,
  "license": "MIT"
}
